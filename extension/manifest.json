{
    "manifest_version": 3,
    "name": "YouTube Transcript Copier (No Timestamps)",
    "version": "1.0",
    "description": "Auto-sidebar to copy YouTube transcripts without timestamps.",
    "permissions": ["activeTab", "clipboardWrite", "tabs"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }